{
  "compilerOptions": {
    "lib": ["dom", "DOM.Iterable", "esnext"],
    "allowJs": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,

    "esModuleInterop": true,

    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
